/* scrollable-text.wxss */
.page-container {
  position: absolute;
  top: 0rpx;
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99999999999999999;
  background-color: #ffffff99;
}

.popup-container {
  width: 70%;
  background-color: #f5d659;
  border: 3px solid #000;
  height: 50vh;
  padding: 32rpx;
  border-radius: 60rpx;
  text-align: center;
}

.close {
  max-width: 40px;
  width: 40px;
  background-color: #f5d659;
  border: 3px solid #000;
  border-radius: 50px;
  text-align: center;
}

.text-info {
  font-weight: bold;
}

.text-container {
  height: 90%;
  overflow-y: scroll;
  text-align: left;
}

.text {
  font-size: 32rpx; /* 根据需要调整字体大小 */
  color: #333;
}