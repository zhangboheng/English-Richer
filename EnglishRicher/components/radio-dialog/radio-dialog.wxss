.dialog-model {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff88
}

.dialog {
  width: 60%;
  padding: 20px;
  background-color: #f5d659;
  border: 3px solid #000;
  border-radius: 5px;
}

.dialog-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
  text-align: center;
}

.radio-group {
  margin-bottom: 20px;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.radio {
  margin-right: 10px;
}

.confirm-btn {
  background-color: #f5d659;
  border: 3px solid #000;
}

.confirm-btn:active {
  background-color: #ffa500;
  border: 3px solid #000;
}