@keyframes floating {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
  100% {
    transform: translateY(0);
  }
}

.box {
  position: absolute;
  top: 50px;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  animation: floating 1s infinite;
}

.floating-box {
  display: flex;
  justify-content: center;
  align-items: center;
}

.price-image {
  width: 24px;
  height: 24px;
}