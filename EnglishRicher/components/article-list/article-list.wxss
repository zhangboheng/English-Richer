.item {
  display: flex;
  align-items:flex-start;
  border: 1px solid #ccc;
  margin-bottom: 20rpx;
}

.image-box {
  max-width: 130px;
  width: 100%;
  height: 100px;
}

.image {
  width: 130px;
  height: 100px;
}

.content {
  flex-grow: 1;
  padding: 20rpx;
}

.title {
  font-size: 12px;
  font-weight: bold;
  color: #333333;
}

.time {
  font-size: 12px;
  color: #999999;
  margin-top: 8rpx;
}