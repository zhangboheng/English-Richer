.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}
.content {
  font-size: 36rpx;
  padding: 0 20rpx;
  text-align: center;
}
.translation-word {
  text-align: justify;
}
.item-type {
  margin-right: 10rpx;
}

.btn {
  width: 200px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
  border: 3px solid #000;
  background-color: #f5d659;
}

.price-image {
  width: 24px;
  height: 24px;
  margin-right: 20rpx;
}

.grade-box {
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  bottom: 60rpx;
}

.footer-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  width: 40%;
  margin: 0 auto;
}