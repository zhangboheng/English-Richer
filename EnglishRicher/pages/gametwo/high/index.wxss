.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}
.content {
  font-size: 36rpx;
  margin-bottom: 20px;
  padding: 0 20rpx;
  text-align: center;
}
.translation-word {
  text-align: justify;
}
.voice-word {
  margin: 0 auto;
  width: 24px;
  height: 24px;
}
.item-type {
  margin-right: 10rpx;
}

.word-input {
  width: 60%;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  border-bottom: 3px solid #000;
}

.btn {
  width: 200px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
  border: 3px solid #000;
  background-color: #f5d659;
}

@keyframes floating {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
  100% {
    transform: translateY(0);
  }
}

.floating-animation {
  position: absolute;
  top: 40rpx;
  z-index: 999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  animation: floating 1s infinite;
}

.floating-box {
  display: flex;
  justify-content: center;
  align-items: center;
}

.price-image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.grade-box {
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  bottom: 60rpx;
}

.footer-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  width: 40%;
  margin: 0 auto;
}