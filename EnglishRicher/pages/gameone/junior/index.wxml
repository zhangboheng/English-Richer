<view class="container">
  <!--每次点击后出现的增加分数-->
  <view id="floatingAnimation" class="floating-animation" wx:if="{{showAnimation}}">
    <view class="floating-box">
      <image class="price-image" src="../../../static/source/coin.png"></image>
      <text>+0.01</text>
    </view>
    <view class="floating-box">
      <image class="price-image" src="../../../static/source/up.png"></image>
      <text>+0.001</text>
    </view>
  </view>
  <view class="word">{{word}}</view>
  <view class="content" wx:if="{{translationShow}}">
    <view wx:for="{{translations}}" wx:key="index">
      <text class="item-type">{{item.type}}</text>
      <text>{{item.translation}}</text>
    </view>
  </view>
  <button class="btn" bindtap="showExplanation">
    <text>解释</text>
  </button>
  <button class="btn" bindtap="handleMaster">
    <text>掌握</text>
  </button>
  <button class="btn" bindtap="handleNotMaster">
    <text>不会</text>
  </button>
</view>