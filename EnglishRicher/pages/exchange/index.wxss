.search-section {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.search-input {
  width: 90%;
  padding: 10rpx;
  border: 3px solid #000;
  outline: none;
  margin-right:10rpx;
}

.search-box {
  border: none;
  outline: none;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5d659;
  border: 3px solid #000
}

.money-section {
  display: flex;
  justify-content: center;
  align-items: center;
}

.product-section {
  display: flex;
  flex-wrap: wrap;
  margin-top:16rpx;
  justify-content: space-between;
  align-items: center;
}

.row {
  width: calc(50% - 30px);
  height: 320rpx;
  display: flex;
  margin-bottom: 10px;
  padding: 10px;
  text-align: center;
  align-items: center;
  justify-content: center;
  border: 3px solid #000;
  background-color: #f5d659;
}

.row-inline {
  width: 100%;
}

.image {
  width: 100%;
  max-width: 64px;
  max-height: 64px;
}

.title {
  display: flex;
  justify-content: center;
  font-size: 14px;
}

.intro-content {
  position: relative;
  top: -2px;
  right: 0;
  width: 18px;
  height: 18px;
  font-size: 10px;
  color: #000;
  border-radius: 20px;
  border: 1px solid #000;
  background-color: #000;
}

.price {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffa500;
  border: 3px solid #000;
}

.price-image {
  width: 20px;
  height: 20px;
}

.price-text {
  font-size: 14px;
}

.price:active {
  background-color: #f5d659;
  border: 3px solid #000;
}

.adContainer {
  margin-top: 20rpx;
}