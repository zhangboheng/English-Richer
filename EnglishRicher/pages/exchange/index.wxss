.search-section {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.search-input {
  width: 90%;
  padding: 10rpx;
  border: 3px solid #000;
  outline: none;
  margin-right:10rpx;
}

.search-box {
  border: none;
  outline: none;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5d659;
  border: 3px solid #000
}

.title-section {
  width: 100%;
  display: flex;
  align-items: center;
  text-align: center;
  padding: 20rpx 0;
  font-weight: bold;
}

.title-line-left {
  flex: 0.5;
  height: 3px;
  background: linear-gradient(to right, transparent, #f5d659);
}

.title-line-right {
  flex: 0.5;
  height: 3px;
  background: linear-gradient(to left, transparent, #f5d659);
}

.money-section {
  display: flex;
  justify-content: center;
  align-items: center;
}

.product-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.row {
  margin-bottom: 10rpx;
  height: 320rpx;
  padding: 10px;
  background-color: #f5d659;
  border: 3px solid #000;
  width: calc(50% - 30px);
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.row-inline {
  width: 100%;
}

.image {
  width: 100%;
  height: 200rpx;
}

.title {
  font-size: 14px;
}

.price {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffa500;
  border: 3px solid #000;
}

.price-image {
  width: 20px;
  height: 20px;
}

.price-text {
  font-size: 14px;
}

.price:active {
  background-color: #f5d659;
  border: 3px solid #000;
}