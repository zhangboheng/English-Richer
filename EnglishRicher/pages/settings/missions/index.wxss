.task {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90%;
  margin: 0 auto;
}

.task-item {
  padding: 20px;
  border: 3px solid #000;
  border-radius: 8px;
  width: calc(100% - 20px);
}

.gap-box {
  margin-bottom: 20rpx;
}

.task-image {
  margin-top: 10px;
  text-align: center;
}

.item-image {
  width: 40px;
  height: 40px;
  text-align: center;
}

.task-name {
  font-size: 16px;
  font-weight: bold;
  text-align: center;
}

.task-reward {
  margin-top: 10px;
  font-size: 14px;
  text-align: center;
}

.reward-value {
  color: #000;
  margin-left: 5px;
  font-weight: bold;
  font-size: large;
}

.task-button {
  margin-top: 10px;
  background-color: #f5d659;
  border: 3px solid #000;
  border-radius: 4px;
  padding: 6px 12px;
  font-size: 14px;
}

.task-button:active {
  background-color: #ffa500;
}

.adContainer {
  margin-bottom: 20rpx;
}