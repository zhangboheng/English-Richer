<view class="container">
  <view class="adContainer">
    <ad unit-id="adunit-ad104572b4e7145d" bindload="adLoad" binderror="adError" bindclose="adClose" ad-intervals="30"></ad>
  </view>
  <view class="search-section">
    <input class="search-input" placeholder="请输入搜索内容" bindinput="onInput" />
    <button class="search-box" bindtap="onSearch">搜索</button>
  </view>
  <accordion-listdel dataList="{{listData}}" wx:if="{{listData.length > 0}}" bind:removeWord="getRemoveWord"></accordion-listdel>
  <view class="content-box" wx:else>
    <view>
      <text>竟然没有不会的单词！？</text>
    </view>
  </view>
</view>