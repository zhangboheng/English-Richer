.container {
  margin: 0 auto;
}

.basic {
  height: auto;
  border: 3px solid #000;
  padding: 20rpx;
  background-color: #f5d659;
}

.basic-box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.inner-box {
  display: flex;
  align-items: center;
}

.item-box-image {
  width: 24px;
  height: 24px;
  margin-right: 10rpx;
}

.recommend {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  font-weight: bold;
}