.add-dialog {
  display: flex;
  justify-content: space-between;
  color: #fff;
  background-color: #00000055;
  padding:5px 10px;
}

.add-tip {
  display: flex;
  align-items: center;
  font-size: 12px;
}
.add-tip-img {
  width: 12px;
  height: 12px;
}
.add-tip-points {
  width: 33px;
  height: 13px;
}

.add-close{
  font-size: 12px;
}

.container-head {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
}
.container-item-text {
  text-align: center;
}

.inner-title {
  font-size: 24px;
  font-weight: bold;
}

.container-head image {
  width: 96px;
  height: 96px;
}

.container-item {
  padding: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #eee;
}

.container-item-special {
  border-bottom: 1px solid #eee;
}

.item-box {
  display: flex;
  justify-content: start;
  align-items: center;
}

.item-box-image {
  margin-right: 10rpx;
}

.container-item image {
  width: 24px;
  height: 24px;
}
.item-inner {
  color: #ccc;
  font-weight: 400;
}